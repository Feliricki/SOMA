generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime  @default(now())
  dueDate DateTime?
  parentId Int?
  parent Todo? @relation("ParentChild", fields: [parentId], references: [id])
  children Todo[] @relation("ParentChild")
}
